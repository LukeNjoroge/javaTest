            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:padding="5dp"
            android:text="Braids"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etRate2"
            android:padding="5dp"
            android:text="Rate"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0a4b1" >

        <TextView
            android:id="@+id/etBookingNo3"
            android:padding="5dp"
            android:text="DF003"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView31"
            android:padding="5dp"
            android:text="14/01/217"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView32"
            android:padding="5dp"
            android:text="Braids"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etRate3"
            android:padding="5dp"
            android:text="Rate"
            android:textSize="16sp" />

    </TableRow>

</TableLayout>