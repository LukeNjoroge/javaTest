<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ke.co.zivish.smartsally.HomeScreenActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="27dp"></LinearLayout>

    <LinearLayout
        android:id="@id/lllocation"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:weightSum="1"
        android:background="#80000000">

        <TextView
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Salon Location"
            android:id="@+id/tvLocateSalon"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#cf4d31"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="27dp"></LinearLayout>

    <LinearLayout
        android:id="@id/llbooking"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:weightSum="1"
        android:background="#80000000">

        <TextView
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Booking"
            android:id="@+id/tvbooking"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#cf4d31"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="27dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/llRating"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:weightSum="1"
        android:background="#80000000">

        <TextView
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rate Services"
            android:id="@+id/tvRateServices"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#cf4d31"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="27dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/llSallyPoints"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:weightSum="1"
        android:background="#80000000">

        <TextView
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sally Points"
            android:id="@+id/tvSallyPoint"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#cf4d31"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="27dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/llRefer"
        android:orientation="vertical"
        android:layout_width="256dp"
        android:layout_height="58dp"
        android:weightSum="1"
        android:background="#80000000">

        <TextView
            android:layout_width="256dp"
            android:layout_height="58dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Refer"
            android:id="@+id/tvFriendRefer"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#cf4d31"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
